@model MaisAbrigo.Model.Abrigo

<h2>Editar Abrigo</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label>
            <input asp-for="Nome" class="form-control" />
            Nome
        </label>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>
            <input asp-for="Endereco" class="form-control" />
            Endereço
        </label>
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>
            <input asp-for="OcupacaoAtual" class="form-control" />
            Ocupação Atual
        </label>
        <span asp-validation-for="OcupacaoAtual" class="text-danger"></span>
    </div>

    <!-- Inclui o ID oculto para o Edit funcionar -->
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-success">Salvar</button>
</form>

<a class="btn btn-primary btn-sm py-2 px-3 mt-4" asp-action="Index">Voltar</a>
